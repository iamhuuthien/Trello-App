# Server
PORT=4001

# Auth (JWT secret)
JWT_SECRET=change_me_securely

# Firebase Admin (option A: use service account JSON file via GOOGLE_APPLICATION_CREDENTIALS)
# If you set GOOGLE_APPLICATION_CREDENTIALS, you do NOT need the FIREBASE_* fields below.
# GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service-account.json

# Firebase Admin (option B: provide fields via env)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_CONTENT_HERE\n-----END PRIVATE KEY-----\n"

# Use Firestore emulator for local dev? (uncomment to enable)
# USE_FIRESTORE_EMULATOR=1
# FIRESTORE_EMULATOR_HOST=127.0.0.1:8080
# FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099

# SMTP (nodemailer) - optional if using SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=sendgrid_smtp_user_or_username
SMTP_PASS=sendgrid_smtp_password_or_api_key
SMTP_FROM="no-reply@your-domain.com"

# SendGrid API (preferred for real email)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_KEY

# Optional test receiver used by some scripts
TEST_RECEIVER=test@example.com